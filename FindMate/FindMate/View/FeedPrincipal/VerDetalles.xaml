                                    <Label Text="Pequeña, Respingada"></Label>
                                </FlexLayout>
                                <FlexLayout Direction="Row" JustifyContent="SpaceAround">
                                    <Label Text="Boca: "/>
                                    <Label Text="Mediana"></Label>
                                </FlexLayout>
                                <FlexLayout Direction="Row" JustifyContent="SpaceAround">
                                    <Label Text="Seña Particular: "/>
                                    <Label Text="Rasgos Asiaticos"></Label>
                                </FlexLayout>
                            </StackLayout>
                        </StackLayout>
                        <StackLayout>
                            <Frame BorderColor="#000" Margin="0, 20, 0, 0">
                                <Label Text="DESAPARECIDA" TextColor="Red" FontSize="35" HorizontalTextAlignment="Center" FontAttributes="Bold"></Label>
                            </Frame>
