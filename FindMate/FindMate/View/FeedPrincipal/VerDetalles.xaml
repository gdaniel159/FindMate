                                </FlexLayout>
                                <FlexLayout Direction="Row" JustifyContent="SpaceAround">
                                    <Label Text="Menton: "/>
                                    <Label Text="Ovalado"></Label>
                                </FlexLayout>
                                <FlexLayout Direction="Row" JustifyContent="SpaceAround">
                                    <Label Text="Ojos: "/>
                                    <Label Text="Marrones"></Label>
                                </FlexLayout>
                                <FlexLayout Direction="Row" JustifyContent="SpaceAround">
                                    <Label Text="Cejas: "/>
